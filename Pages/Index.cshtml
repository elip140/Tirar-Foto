@page
@model IndexModel
@{
    ViewData["Title"] = "Tirar Foto";
}

<div class="text-center">
    
    <button class="btn btn-primary" onclick="setPlaceholder()">Placeholder</button>

    <div id="cardp">
        <button type="button" class="btn btn-primary" id="Btn_LoadCam" onclick="loadCamera()">Usar camera</button>

        <div id="cam" style="display:none;">
            <video autoplay="true" id="webCam"></video><br>
            <button type="button" class="btn btn-primary" id="Btn_TirarFoto" onclick="takeSnapShot()">Tirar foto e salvar</button>
        </div>

    
        <form method="post" asp-page-handler="Send" id="foto_display" style="">
            <div class="row">
                <div asp-validation-summary="All"></div>
            </div>
            <img id="foto">
            <input id="fotoBase64" type="hidden" asp-for="NewFoto.Base64" />
            <!--<p id="caminhoImagem" class="caminho-imagem"><a href="" target="_blank" rel="noopener"></a></p>-->
            <button class="btn btn-primary">Adicionar</button>
        </form>

        <div id="aviso">
            <h4>Aviso</h4>
            <p>A funcionalidade de usar a webcam pode não ser compativel com versões mais antigas de alguns navegadores ou em sites HTTP.</p>
            <a href="https://developer.mozilla.org/en-US/docs/Web/API/MediaDevices/getUserMedia#browser_compatibility">Lista de compatibilidade</a>
        </div>
    </div>

    <div class="conteiner-fluid">
        <div class="row justify-content-center">
            <h4>Listagem de fotos</h4>
        </div>
    <div class="row justify-content-center">
        @foreach (var f in Model.Lista)
        {
            <div class="card p-4 col-4 m-2">
                <img src="@f.Show()" class="card-img-top">
            </div>
        }
    </div>
    </div>
</div>


